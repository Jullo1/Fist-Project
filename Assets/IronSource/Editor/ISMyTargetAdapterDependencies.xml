<dependencies>
    <unityversion>4.1.22.2</unityversion>
    <androidPackages>
        <androidPackage spec="com.ironsource.adapters:mytargetadapter:4.1.19">
            <repositories>
                <repository>https://android-sdk.is.com/</repository>
            </repositories>
        </androidPackage>
    </androidPackages>
    <androidPackages>
        <androidPackage spec="com.my.target:mytarget-sdk:5.20.0">
            <repositories>
                <repository>https://maven.google.com/</repository>
            </repositories>
        </androidPackage>
    </androidPackages>
    <!-- 
    added exoplayer dependency due to conflict with Applovin.
    Applovin uses exoplayer 2.15.1 and android build is not able to resolve it by its own
    so we have to force this dependency.
    -->
    <androidPackages>
        <androidPackage spec="com.google.android.exoplayer:exoplayer:2.19.1">
            <repositories>
                <repository>https://maven.google.com/</repository>
            </repositories>
        </androidPackage>
    </androidPackages>
    <iosPods>
        <iosPod name="IronSourceMyTargetAdapter" version="4.1.20.2">
            <sources>
                <source>https://github.com/CocoaPods/Specs</source>
            </sources>
        </iosPod>
    </iosPods>
</dependencies>
